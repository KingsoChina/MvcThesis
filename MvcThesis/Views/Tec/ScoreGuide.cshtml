@*指导老师评分*@
@model MvcThesis.Topic


@using (Html.BeginForm("ScoreGuide", "Tec", FormMethod.Post, new { @class = "form form-horizontal", @style = "margin-bottom: 0;" }))
{
    <div style="margin:0;padding:0;display:inline">
        @Html.AntiForgeryToken()
    </div>
    <div class="text-center control-group">
        <h2>请为 @Model.Student.FullName 评分</h2>
        <small class="muted">课题名称：@Model.Title</small>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.UsualScore, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBox("UsualScore", Model.UsualScore > 0 ? Model.UsualScore.ToString() : "", new { @placeholder = "100分制" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.ReviewScore, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBox("ReviewScore",Model.ReviewScore>0?Model.ReviewScore.ToString():"", new { @placeholder = "100分制" })
        </div>
    </div>
    @Html.HiddenFor(m => m.TopicId)
}