@model MvcThesis.UserViewModel

@using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { @id = "ProfileForm" }))
{
    <div class="control-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "span12" })
        </div>
    </div>
    @Html.HiddenFor(m => m.User_ID)
}
