@model MvcThesis.LoginModel

@{
    ViewBag.Title = "登录";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!--[if lt IE 9]>
    <script src='/Content/assets/javascripts/html5shiv.js' type='text/javascript'></script>
    <![endif]-->
    <link rel="stylesheet" href="~/Content/login.css" type="text/css" />
    <style>
        body {
            background: url(@Url.Content(ViewData["img_url"].ToString())) no-repeat top center;
        }
    </style>
</head>
<body>
    <div class="login">
        <div id="error">@ViewBag.error</div>
        <ul>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                <li><label>@Html.DisplayNameFor(m=>m.UserName)</label>@Html.TextBoxFor(m => m.UserName, new { @class = "login_input" })</li>
                <li><label>@Html.DisplayNameFor(m => m.Password)</label>@Html.PasswordFor(m => m.Password, new { @class = "login_input" })</li>
                <li><label>@Html.DisplayNameFor(m =>m.RememberMe)</label>@Html.CheckBoxFor(m => m.RememberMe, new { @class = "login_input" })</li>
                <li><input type="submit" value="登陆" class="login_btn"></li>
            }
        </ul>
    </div>
    <div class="login-action text-center">
        © 数学与统计学院
    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
